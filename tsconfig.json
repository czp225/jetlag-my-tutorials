{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules"],
  "include": ["src/game/*"],
  "typedocOptions": {
    "out": "./docs/",
    "name": "JetLag Documentation",
    "exclude": ["**/internal/*.ts", "**/internal/*/*.ts", "**/node_modules/**/*"],
    "mode": "file",
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true,
    "ignoreCompilerErrors": true
  }
}